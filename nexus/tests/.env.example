# Test Environment Configuration for Nexus AI Platform
# Copy this file to .env and fill in the values

# Environment
TEST_ENV=local

# Application URLs
BASE_URL=http://localhost:5173
API_URL=http://localhost:3001/api

# SSE Configuration
SSE_URL=http://localhost:3001/api/sse

# Authentication (Clerk test credentials)
# Create test users in Clerk dashboard for E2E testing
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=

# Clerk publishable key (same as frontend)
CLERK_PUBLISHABLE_KEY=

# API Keys for integration testing (if needed)
TEST_API_KEY=

# Feature Flags
FEATURE_WORKFLOW_REAL_EXECUTION=true
FEATURE_SSE_UPDATES=true

# Workflow Testing
# Set to 'simulated' for faster tests without real Claude API calls
WORKFLOW_MODE=simulated

# Timeouts (in milliseconds)
WORKFLOW_TIMEOUT=60000
SSE_CONNECTION_TIMEOUT=10000
